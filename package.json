{
  "name": "ollin",
  "version": "0.4.0",
  "description": "UI 개발자를 위한 디자인 시안 오버레이 도구",
  "main": "app/js/dkoverlay.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "overlay",
    "ui-development",
    "design-tool"
  ],
  "author": "bearholmes",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "app/js/**/*.js",
      "app/background.js",
      "!app/js/i18n.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
