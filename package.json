{
  "name": "ollin",
  "version": "0.6.0",
  "description": "UI 개발자를 위한 디자인 시안 오버레이 도구",
  "type": "module",
  "main": "app/js/content-script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,css,html}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "overlay",
    "ui-development",
    "design-tool"
  ],
  "author": "bearholmes",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/chrome": "^0.0.276",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.5.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "app/js/**/*.{js,ts}",
      "app/*.{js,ts}",
      "!app/js/i18n.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.{js,ts}"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
